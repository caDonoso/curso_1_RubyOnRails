<header>
  <nav class="navbar navbar-expand-lg navbar-light">
    <a class="navbar-brand" href="/">Home</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">

        <% if user_signed_in? && current_user.is_admin? %>
          <div class="btn-group">
            <%= link_to "Cerros", "/mountains", class:"btn btn-dark"%>
            <button type="button" class="btn btn-dark dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="sr-only">Toggle Dropdown</span>
            </button>
            <div class="dropdown-menu">
              <%= link_to "Editar cerros en borrador", dashboard_path(:estado => "borradores"), class:"dropdown-item" %>
              <%= link_to "Editar cerros publicados", dashboard_path(:estado => "publicados"), class:"dropdown-item" %>
            </div>
          </div>
          
          <div class="btn-group">
            <%= link_to "Crear categoría", "/categories/new", class:"btn btn-warning"%>
          </div>
        <% else %>

          <div class="btn-group">
            <a class="btn btn-dark" href="/mountains"> Cerros <span class="sr-only">(current)</span></a>
          </div>

        <% end %>

        <% if user_signed_in? && (current_user.is_editor? || current_user.is_admin?) %>

        <div class="btn-group">
          <a class="btn btn-dark" href="/mountains/new">Agregar cerro <span class="sr-only">(current)</span></a>
        </div>

        <% end %>

        <% if user_signed_in? %>

          <div class="btn-group">
            <%= link_to "Cerrar sesión", destroy_user_session_path, class:"btn btn-info", method: :delete%>
          </div>

          

        <% else %>
          <div class="btn-group">
            <a class="btn btn-dark" href="/users/sign_in"> Iniciar sesión <span class="sr-only">(current)</span></a>
          </div>

          <div class="btn-group">
            <a class="btn btn-dark" href="/users/sign_up"> Crear cuenta <span class="sr-only">(current)</span></a>
          </div>
        <%end%>
      </ul>
    </div>
  </nav>
</header>