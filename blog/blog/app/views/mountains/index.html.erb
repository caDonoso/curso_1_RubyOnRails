<% @mountains.each do |mountain| %>
	<div>
		<div class="card" id="cardContainer">

		  <div class="card-header">
		    <%= mountain.name %> 
		  </div>

		  <div class="card-body">
		    <blockquote class="blockquote mb-0">
		    	
		      <p> Descripcion: <%= mountain.description %> </p>


		      <% unless mountain.user.nil? %>
		      	<p> Escrito por: <%= mountain.user.email %> </p>
		      <% end %>

		      <p><%= mountain.visits_count %> usuarios han visualizado este cerro.</p>

		      <footer class="blockquote-footer"> 
		      	<p> Altitud: <%= mountain.altitude %></p>
		      </footer>
		      <%= link_to "Borrar", mountain, class:"btn btn-danger", method: :delete %>
		      <%= link_to "Editar", edit_mountain_path(mountain), class:"btn btn-warning"%>
		      <%= link_to "Ver mÃ¡s", mountain_path(mountain), class:"btn btn-info"%>
		    </blockquote>
		  </div>

		</div>
		
	</div>


<% end %>
