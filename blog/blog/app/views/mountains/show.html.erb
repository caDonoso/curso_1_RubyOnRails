<div class="center-xs">
	<h1> <%= @mountain.name %> </h1>
	<p> Descripcion: <%= @mountain.description %> </p>
	<p> Alitud: <%= @mountain.altitude %></p>
	<div class="field">
		<%= image_tag @mountain.cover.url(:thumb)%>
	</div>

	<% @mountain.categories.each do |category|%>
		#<%= category.name %>
	<% end %>
</div>
	<%= render "comments/form"%>

	<ul id="comments-box">
		<% @mountain.comments.each do |comment| %>
		<li>
			<%= comment.body %> - <%= comment.user.email %>
		</li>
		<%end%>
	</ul>